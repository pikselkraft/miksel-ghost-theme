{
  "name": "ghostkraft-pikselkraft",
  "version": "0.0.1",
  "description": "NPM build script for front-end workflow with Ghost CMS",
  "main": "index.js",
  "author": "pikselkraft",
  "license": "ISCi",
  "repository": {
    "type": "git",
    "url": "https://github.com/pikselkraft/ghostkraft"
  },
  "bugs": {
    "url": "https://github.com/pikselkraft/ghostkraft"
  },
  "homepage": "https://github.com/pikselkraft/ghostkraft",
  "devDependencies": {
    "browser-sync": "^2.18.5",
    "clean-css": "^3.4.22",
    "concat-cli": "^4.0.0",
    "critical": "^0.8.4",
    "csscomb": "^3.1.7",
    "eslint": "^3.12.2",
    "http-server": "^0.9.0",
    "imagemin": "^5.2.2",
    "jshint": "^2.9.4",
    "live-reload": "^1.1.0",
    "nodemon": "^1.11.0",
    "opener": "^1.4.2",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "rework-npm-cli": "^0.1.1",
    "stylelint": "^7.6.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.1",
    "uglify-js": "^2.7.5",
    "uncss": "^0.14.1",
    "watch": "^1.0.1"
  },
  "scripts": {
    "–––––––INIT FOLDER SCRIPTS": "–––––––––––––",
    "info": "echo 'npm as a build tool: ¦̵̱ ̵̱ ̵̱ ̵̱ ̵̱(̢ ̡͇̅└͇̅┘͇̅ (▤8כ−◦'",
    "fold:clean": "rm -R -rf __dev",
    "fold:dev": "mkdir -p __dev/{css,images,fav,js,fonts}",
    "fold:assets": "mkdir -p assets/{css,fav,fr,images,js,fonts}",
    "cp:files": "cp -R fav fonts images js ../assets/ && cp -f *.jpg ../assets/",
    "–––––––CSS SCRIPTS": "–––––––––––––",
    "postcss": "postcss --config postcss.json",
    "css:bundle": "rework-npm css/*.css -o css/bundle.css",
    "css:concat": "cat css/*.css > css/bundle.css",
    "cssnext": "postcss -u postcss-cssnext css/bundle.css > css/bundle.next.css",
    "css:comb": "csscomb css/bundle.next.css && cp -f css/bundle.next.css ../assets/css/bundle.css",
    "css:minify": "cleancss css/bundle.next.css -o ../assets/css/bundle.min.css  && rm css/bundle.*",
    "build:css": "npm run css:concat && npm run cssnext && npm run css:comb && npm run css:minify",
		"css:uncss": "cat ../*.hbs | uncss -s css/bundle.next.css > css/bundle.clean.css",
    "–––––––IMG and SVG SCRIPTS": "–––––––––––––",
    "img:min": "imagemin assets/img/*.jpg dist/public/img/*.jpg -p",
    "svg:clean": "svgo -f assets/img/icons",
    "svg:opt": "svgo -f assets/img",
    "svg:icons": "svgo -f assets/img/icons && svg-sprite-generate -d assets/img/icons -o dist/public/img/icons.svg",
    "–––––––JS SCRIPTS": "–––––––––––––",
    "js:lint": "jshint js/*.js && cp -f js/*.js ../assets/js/",
    "js:minify": "cp -f js/*.js  ../assets/js/ && uglifyjs js/*.js > ../assets/js/index.min.js",
		"build:js": "npm run js:lint && npm run js:minify",
    "–––––––WATCH SCRIPTS": "–––––––––––––",
    "watch": "watch 'npm run dist' assets/css/",
    "watch:nodemon": "nodemon -e css -x",
    "livereload": "live-reload --port 9091 dist/public",
    "browsersync": "browser-sync start --server --files 'dist/css/*.css, dist/js/*.js'",
    "–––––––SERVER SCRIPTS": "–––––––––––––",
    "server": "http-server dist/public/",
    "open:prod": "opener http://example.com",
    "open:stage": "opener http://staging.example.internal",
    "open:dev": "opener http://127.0.0.1:2368",
    "–––––––EXPERIMENTAL FEATURES": "–––––––––––––",
    "html:copy": "concat assets/*.html | pbcopy",
    "css:copy": "cat dist/public/css/bundle.min.css | pbcopy",
    "critical": "critical dist/public/index.html --inline --minify > dist/public/index.tmp --css dist/public/css/bundle.min.css && mv dist/public/index.tmp dist/public/index.html",
    "––––––– FIX COMMAND": "–––––––––––––",
    "fix:path": "sed -i -e 's|../../../assets/css|../typo|g' dist/public/css/bundle.min.css",
    "––––––– CREATE DIST FOLDER": "–––––––––––––",
    "dist": "npm run fold:clean && npm run fold:dist && npm run fold:files && npm run build:css",
    "dist-opt": "npm run fold:clean && npm run fold:assets && npm run fold:dist && npm run fold:files && npm run build:css && npm run css:uncss"
  }
}
